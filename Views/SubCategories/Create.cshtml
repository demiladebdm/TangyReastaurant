@model Tangy.Models.SubCategoryViewModels.SubCategoryAndCategoryViewModel
@using Tangy.Extensions
@{
    ViewData["Title"] = "Create";
}

<br />
<h1>Create SubCategory</h1>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<hr />

<div class="form-border">
    <div class="row">
        <div class="col-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="SubCategory.Name" class="custom-label"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="SubCategory.Name" class="form-control" />
                    </div>
                    <span asp-validation-for="SubCategory.Name" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="SubCategory.CategoryId" class="custom-label"></label>
                    </div>
                    <div class="col-5">
                        <select asp-for="SubCategory.CategoryId" asp-items="Model.CategoryList.ToSelectListItem(Model.SubCategory.CategoryId)" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="isNew" class="custom-label"></label>
                    </div>
                    <div class="col-5">
                        <input class="form-check-input" asp-for="isNew" />
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </form>
        </div>
        <div class="col-4">
            @if (Model.SubCategoryList.Count() > 0)
            {
                <p> Existing Subcategories : </p>
                <ul class="list-group">
                    @foreach (var item in Model.SubCategoryList)
                    {
                        <li class="list-group-item">@item</li>
                    }
                </ul>
            }
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}