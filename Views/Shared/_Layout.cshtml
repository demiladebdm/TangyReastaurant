<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tangy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tangy.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="//use.fontawesome.com/releases/v5.7.2/css/all.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <div class="container-fluid col-md-12">
            <nav class="container-fluid navbar navbar-expand-md fixed-top navbar-dark bg-dark">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home">Tangy</a>
                <div class="col-8">
                    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                        <div class="container-fluid">
                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                    <li class="nav-item"><a class="nav-link" href="#">Order History</a></li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Admin
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                                            <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">Category</a></li>
                                            <li><a class="dropdown-item" asp-controller="SubCategories" asp-action="Index">Sub Category</a></li>
                                            <li><a class="dropdown-item" asp-controller="MenuItems" asp-action="Index">Menu Items</a></li>
                                            <li><a class="dropdown-item" asp-controller="Coupons" asp-action="Index">Coupons</a></li>
                                            <li><a class="dropdown-item" href="#">Users</a></li>
                                        </ul>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Order
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                                            <li><a class="dropdown-item" href="#">Manage Order</a></li>
                                            <li><a class="dropdown-item" href="#">Order Pickup </a></li>
                                            <li><a class="dropdown-item" href="#">Download Order Details</a></li>
                                        </ul>
                                    </li>
                                    <li style="color:white">
                                        <a href="#" class="nav-link">
                                            <i class="bi bi-cart-fill"></i>
                                            (0)
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
                <div class="d-flex col-3 justify-content-end">
                    <div class="d-flex me-0">
                        @await Html.PartialAsync("_LoginPartial")
                        @*@{
                                await Html.RenderPartialAsync("_LoginPartial");
                            }*@
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3 mt-5">
            <br />
            @RenderBody()
            <br />
            <hr />
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="cont">
            <p class="text-muted">
                &copy; 2023 - Tangy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
